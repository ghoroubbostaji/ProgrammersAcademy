<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body id="top">

<header>
  <%- include('../partials/header'); %>
</header>

<section class="content">
  <div class="container">
    <div class="row">
      <div class="grid_12">
        <h3 class="ta__center">Registration</h3>
      </div>


      <div class="createS_divs">
        <form  id="form" >
          <!-- id="session_form" -->
          <div id="loginPlace">

              <div class="haveAccount">
                Already have an account? <a id="Reg" href="/login">Log in here</a>
              </div>
<br /><br />
              <label for="username" class="username">
                User name:<input type="username" id="username"  name="username" placeholder="your name.." value="" data-constraints="@Required @Password" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required />
              </label><br /><br />


<br /><br />
              <label for="email" class="email">
                Email:<input type="Email" id="email"  name="email" placeholder="name@example.com" value="" data-constraints="@Required @Password" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required />
              </label><br /><br />

<br /><br />


              <label for="pw" class="password">
                Password:<input type="password" name="pw" id="pw" placeholder="Password.." value="" data-constraints="@Required @Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required/>
              </label><br /><br />
<br /><br />
              <label for="pw2" class="password">
                Confirm Password:<input type="password" name="pw2" id="pw2" placeholder="Confirm Password.." value="" data-constraints="@Required @Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required/>
              </label><br /><br />

              <div class="clear"></div>
              <div id="buttonLoginMargin">
                <div class="btns" id="bttn">
                  <button class="btn" type="reset" style="font-size: 25px; padding-left: 26px; padding-right: 26px; padding-bottom:2px;">Reset </button>
                </div>
              </div>



          </div>
        </form>
      </div>
    </div>
</section>

<section>

        <div id="Result" style="width:23%;	height: 36px;
          border: 1px solid #d3cdcd; color: green;font: 300 20px/20px 'Open Sans', sans-serif;
        margin-bottom:2rem;margin-left:38%; padding:10px; display: center;"> </div>


        <div style="margin-left: 45.5%; display: inline-block; ">
                <!-- <button class="btn btn-primary" type="submit" onclick="send_to_server()" >Register </button> -->
                <!-- <input  id="submitBut" onclick="send_to_server()" type="button" value="Register"/> -->
          <button class="btn"  onclick="send_to_server()" type="submit" style="font-size: 25px; padding-left: 19px; padding-right: 19px; padding-bottom:2px;"> Register </button>

          <br />
        <div class="backTo">

        </div>
        </div>

      <script>

      function send_to_server()
      {
        $.ajax({
            type: 'POST',
            url: "/trainees",
            data: $('#form').serialize(),

        }).done( function (res_data) {

              $("#Result").text('   Successfully Register!!');

        });

      }

      </script>

</section>



    <footer id="footer">
      <%- include('../partials/footer'); %>
    </footer>
  </body>
</html>
